FILENAME_F90_ML := mlvars.F90

SRC_F90_ML := $(FILENAME_F90_ML:%.F90=$(SRC_DIR_ML)/%.F90)
OBJ_F90_ML := $(FILENAME_F90_ML:%.F90=$(OBJ_F90_DIR)/%.o)

FILENAME_F77_ML := twoeqn_ML.F

SRC_F77_ML := $(FILENAME_F77_ML:%.F=$(SRC_DIR_ML)/%.F)
OBJ_F77_ML := $(FILENAME_F77_ML:%.F=$(OBJ_F77_DIR)/%.o)


.PHONY: all clean f90exe guard-%

.SUFFIXES: .f90 .f .F .F90 .o .mod 

all: guard-PREDICTOR_HOME f90exe

clean:
	rm -f $(OUTPUT_DIR)/bin/*
	rm -f $(OBJ_F77_DIR)/*.o
	rm -f $(OBJ_F90_DIR)/*.o
	rm -f $(MOD_DIR)/*.mod
	rm -rf $(OUTPUT_DIR)


f90exe: $(OBJ_F90_LIBS) $(OBJ_F90_ML) $(OBJ_F77_LIBS) $(OBJ_F77_DIST) $(OBJ_F77_ML) $(F90_EXE)

guard-%:
	@ if [ "${${*}}" = "" ]; then \
		echo "Environment variable $* not set"; \
		exit 1; \
	fi



$(OBJ_F77_DIR)/%.o: $(SRC_DIR_LIBS)/%.F |$(OBJ_F77_DIR)
	$(F90) $(F90FLAG) -I$(MOD_DIR) -c $^ -o $@ 

$(OBJ_F77_DIR)/%.o: $(SRC_DIR_DIST)/%.F |$(OBJ_F77_DIR)
	$(F90) $(F90FLAG) -I$(MOD_DIR) -c $^ -o $@ 

$(OBJ_F77_DIR)/%.o: $(SRC_DIR_ML)/%.F |$(OBJ_F77_DIR)
	$(F90) $(F90FLAG) -I$(MOD_DIR) -I$(TF_INCS_DIR) -c $^ -o $@ 

$(OBJ_F90_DIR)/%.o: $(SRC_DIR_LIBS)/%.F90 |$(OBJ_F90_DIR)
	$(F90) $(F90FLAG) -c $^ -o $@ -J$(MOD_DIR)

$(OBJ_F90_DIR)/%.o: $(SRC_DIR_ML)/%.F90 |$(OBJ_F90_DIR)
	$(F90) $(F90FLAG) -I$(TF_INCS_DIR) -c $^ -o $@ -J$(MOD_DIR)


$(F90_EXE): $(OBJ_F90_ML) $(OBJ_F90_LIBS) $(OBJ_F77_LIBS) $(OBJ_F77_DIST) $(OBJ_F77_ML) |$(BIN_DIR)
	$(F90) $(F90FLAG) -I$(MOD_DIR) $^ -o $@  $(TF_LINKS)

$(OBJ_F77_DIR):
	mkdir -p $(MOD_DIR)
	mkdir -p $(OBJ_F77_DIR)

$(OBJ_F90_DIR):
	mkdir -p $(MOD_DIR)
	mkdir -p $(OBJ_F90_DIR)

$(BIN_DIR):
	mkdir -p $(BIN_DIR)
